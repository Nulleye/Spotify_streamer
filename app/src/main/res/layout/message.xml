<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" android:visibility="gone"
    android:id="@+id/message_layout"
    android:layout_margin="@dimen/thumbnail_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/img_searching"
        android:id="@+id/message_icon"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_marginLeft="@dimen/thumbnail_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/message_searching"
        android:id="@+id/message_text"
        android:layout_gravity="center_vertical" />

</LinearLayout>